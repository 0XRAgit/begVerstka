<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="35dp"
        android:layout_height="5dp"
        android:background="@drawable/ic_dialog_frame"
        android:layout_marginTop="6dp"
        android:layout_gravity="center_horizontal"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/preview_recycler"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        tools:listitem="@layout/item_image_check"/>

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/bold_20sp_black"
        tools:text="Для новичков"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/semibold_16sp_black"
        tools:text="р-н Метрогородок, Москва"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/coordinate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/regular_16sp_gray"
        tools:text="55.844573, 37.700004"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/regular_15sp_black"
        tools:text="3.4 км · 15:02 · 30 июня · Бег"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/regular_15sp_black"
        android:gravity="start"
        tools:text="Себя к регулярным занятиям бегом – задача непростая. И часто она не приносит нам удовольствия и"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="12dp"/>
</LinearLayout>